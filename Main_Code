height = float(input("Please enter your height in meters : "))
weight = float(input("Please enter your weigth in kilograms : "))
BMI = weight/height**2
#print(BMI) for debugging
a = str(int(BMI))
if BMI < 18.5:
 print("Your BMI is " + a +". You are underweight.")
elif BMI>= 18.5 and BMI<25:
   print("Your BMI is " + a +". You are normal.")
elif BMI>= 25 and BMI<30:
   print("Your BMI is " + a +". You are overweight.")
elif BMI>= 30 and BMI<35:
   print("Your BMI is " + a +". You are obese.")
else:
     print("You are extremely obese.")
